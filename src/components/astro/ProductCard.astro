
---
const { product } = Astro.props;
---
<div class="bg-white p-4 rounded-lg shadow border">
  <h3 class="font-bold text-lg">{product.name}</h3>
  <p class="text-primary-600 text-xl">${product.price.toLocaleString('es-CO')}</p>
  <p class="text-gray-600 text-sm capitalize">{product.category}</p>
  <div class="mt-3">
    <a href={`/producto/${product.slug}`} class="bg-primary-500 text-white px-4 py-2 rounded hover:bg-primary-600 inline-block">
      Ver detalles
    </a>
  </div>
</div>
