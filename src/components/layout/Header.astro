---
// src/components/layout/Header.astro - HEADER SIN ERRORES TYPESCRIPT
import { supabase } from '../../lib/supabase';

// ‚úÖ DETECTAR USUARIO LOGUEADO (SERVER-SIDE) CON TIPOS SIMPLES
let user: any = null;
let isLoggedIn = false;

try {
  // Intentar obtener el usuario desde las cookies de sesi√≥n
  const sessionCookie = Astro.cookies.get('sb-access-token');
  
  if (sessionCookie?.value && supabase) {
    const { data: { user: authUser }, error } = await supabase.auth.getUser(sessionCookie.value);
    if (!error && authUser) {
      user = authUser;
      isLoggedIn = true;
    }
  }
} catch (error) {
  // Si hay error, simplemente no mostrar usuario logueado
  console.log('Error checking auth in header:', error);
}
