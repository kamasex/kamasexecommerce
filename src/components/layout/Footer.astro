<!-- ✅ SCRIPT PARA LOGOUT EN FOOTER -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    
    // ✅ LOGOUT DESDE FOOTER
    const footerLogout = document.getElementById('footer-logout');
    
    if (footerLogout) {
      footerLogout.addEventListener('click', async function() {
        try {
          // Logout con Supabase si está disponible
          if (typeof window !== 'undefined' && window.supabase) {
            await window.supabase.auth.signOut();
          }
          
          // Limpiar cookies
          document.cookie = 'sb-access-token=; path=/; expires=Thu, 01 Jan 1970 00:00:01 GMT';
          
          // Redirigir al inicio
          window.location.href = '/';
        } catch (error) {
          console.error('Error durante logout:', error);
          // Aún así redirigir
          window.location.href = '/';
        }
      });
    }

    // ✅ SINCRONIZACIÓN DINÁMICA CLIENT-SIDE
    async function updateFooterAuth() {
      try {
        if (typeof window !== 'undefined' && window.supabase) {
          const { data: { user } } = await window.supabase.auth.getUser();
          
          // Obtener la sección de Mi Cuenta
          const accountSection = document.querySelector('footer h3:contains("Mi Cuenta")');
          if (accountSection) {
            const accountList = accountSection.nextElementSibling;
            
            if (user && accountList) {
              // Usuario logueado - actualizar contenido dinámicamente
              const userName = user.user_metadata?.full_name || user.email?.split('@')[0] || 'Usuario';
              
              accountList.innerHTML = `
                <li><span class="text-gray-400 text-xs">Hola, ${userName}</span></li>
                <li><a href="/mis-pedidos" class="text-gray-400 hover:text-white transition-colors">Mis Pedidos</a></li>
                <li><a href="/perfil" class="text-gray-400 hover:text-white transition-colors">Mi Perfil</a></li>
                <li><button id="footer-logout-dynamic" class="text-gray-400 hover:text-white transition-colors text-left">Cerrar Sesión</button></li>
                <li><a href="/carrito" class="text-gray-400 hover:text-white transition-colors">Carrito</a></li>
              `;
              
              // Re-agregar evento de logout
              const dynamicLogout = document.getElementById('footer-logout-dynamic');
              if (dynamicLogout) {
                dynamicLogout.addEventListener('click', footerLogout.click);
              }
            } else if (!user && accountList) {
              // Usuario NO logueado - actualizar contenido
              accountList.innerHTML = `
                <li><a href="/login" class="text-gray-400 hover:text-white transition-colors">Iniciar Sesión</a></li>
                <li><a href="/registro" class="text-gray-400 hover:text-white transition-colors">Crear Cuenta</a></li>
                <li><a href="/mis-pedidos" class="text-gray-400 hover:text-white transition-colors">Buscar Pedido</a></li>
                <li><a href="/carrito" class="text-gray-400 hover:text-white transition-colors">Carrito</a></li>
              `;
            }
          }
        }
      } catch (error) {
        console.log('Error updating footer auth:', error);
      }
    }

    // Ejecutar después de que se cargue la página
    setTimeout(updateFooterAuth, 1000);
  });
</script>