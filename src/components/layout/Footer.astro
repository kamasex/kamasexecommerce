---
// src/components/astro/Footer.astro - FOOTER CON NAVEGACIÓN CONDICIONAL
import { supabase } from '../../lib/supabase';

// ✅ DETECTAR USUARIO LOGUEADO (igual que Header)
let user = null;
let isLoggedIn = false;

try {
  const sessionCookie = Astro.cookies.get('sb-access-token');
  
  if (sessionCookie && supabase) {
    const { data: { user: authUser }, error } = await supabase.auth.getUser(sessionCookie.value);
    if (!error && authUser) {
      user = authUser;
      isLoggedIn = true;
    }
  }
} catch (error) {
  console.log('Error checking auth in footer:', error);
}
