---
import Layout from '../components/layout/Layout.astro';
import { UnifiedProductGrid } from '../components/react/ProductGrid';
import { getProducts } from '../lib/supabase';

const products = await getProducts();
---

<Layout title="Productos - Kamasex.shop">
  <UnifiedProductGrid
    products={products}
    variant="catalog"
    title="Nuestros Productos"
    subtitle="Explora nuestra completa colección de productos para tu bienestar íntimo"
    showFilters={true}
    showSearch={true}
    showSort={true}
    showPagination={true}
    itemsPerPage={16}
    columns={{ mobile: 1, tablet: 2, desktop: 3 }}
    client:load
  />
</Layout>